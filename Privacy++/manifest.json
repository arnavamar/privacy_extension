{
	"name": "Privacy++",
	
  "version": "0.1",
	
  "description": "One stop privacy and security extension",
	
  "permissions": [
    "webRequest", 
    "declarativeContent", 
    "activeTab", 
    "webRequestBlocking", 
    "tabs", 
    "storage",
    "history",
    "identity"
  ],
	
  "options_page": "html/options.html",
	
  "content_scripts":[
	  {
	    "matches":["http://*/*"],
      "exclude_globs":["*://192.168.*.*/*",
        "*://172.16.*.*/*",
        "*://10.*.*.*/*"
      ],
	    "js": ["js/http.js"]
	  }
	],
	
  "background": {
      "scripts": ["js/background.js"],
      "persistent": true
    },

  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/shield.png",
      "32": "icons/shield_32.png",
      "48": "icons/shield_64.png",
      "128": "icons/shield_128.png"
    }
  },

  "web_accessible_resources": [
    "html/unsafe.html",
    "html/pass_manager.html"
  ],

  "icons": {
    "16": "icons/shield.png",
    "32": "icons/shield_32.png",
    "48": "icons/shield_64.png",
    "128": "icons/shield_128.png"
  },
	
  "manifest_version": 2
}